<% include ../partials/header %>

<div class="ui centered huge header" id="header">Available Jobs</div>

<table class="ui celled padded table">
    <thead>
        <tr>
            <th class="three wide">Charity</th>
            <th class="three wide">Title</th>
            <th class="ten wide">Apply</th>
            <th>View More</th>
        </tr>
    </thead>
    
    <tbody>
    
    <% jobs.forEach(function(job) { %>
        <tr>
            <td><%= job.charityName %></td>
            <td><%= job.title %></td>
            <% if (job.description.length <= 475) { %>
                <td><%= job.description %></td>
            <% } else { %>
                <td><%= job.description.substring(0, 475); %>...</td>
            <% } %>
            <td><a class="ui green button" href="/programmer/job/<%= job._id %>/">Apply!</a></td>
        </tr>
    <% }); %>
    
  </tbody>
</table>

<% include ../partials/footer %>