<% include ../partials/header %>

<h1>View Available Jobs</h1>

<table class="ui celled table">
    <thead>
        <tr>
            <th>Charity</th>
            <th>Title</th>
            <th>Description</th>
            <th>More Info</th>
        </tr>
    </thead>
    
    <tbody>
    
    <% jobs.forEach(function(job) { %>
        <tr>
            <td><%= job.charityName %></td>
            <td><%= job.title %></td>
            <% if (job.description.length <= 175) { %>
                <td><%= job.description %></td>
            <% } else { %>
                <td><%= job.description.substring(0, 175); %>...</td>
            <% } %>
            <td><a href="/programmer/job/<%= job._id %>/apply"><button>View More!</button></a></td>
        </tr>
    <% }); %>
    
  </tbody>
</table>

<% include ../partials/footer %>