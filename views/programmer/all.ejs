<% include ../partials/header %>

<div class="ui centered huge header" id="header">Available Jobs</div>

<table class="ui celled padded table">
    <thead>
        <tr>
            <th class="three wide">Charity</th>
            <th class="eight wide">Description</th>
            <th class="two wide">View More</th>
        </tr>
    </thead>
    
    <tbody>
    
    <% jobs.forEach(function(job) { %>
        <tr>
            <td><%= job.charityName %></td>
            <% if (job.description.length <= 400) { %>
                <td><%= job.description %></td>
            <% } else { %>
                <td><%= job.description.substring(0, 400); %>...</td>
            <% } %>
            <td><a class="ui green button" href="/programmer/job/<%= job._id %>/apply">More Info!</a></td>
        </tr>
    <% }); %>
    
  </tbody>
</table>

<% include ../partials/footer %>